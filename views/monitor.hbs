<table>

    {{#errors}}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>{{param}}</strong> {{msg}}
        </div>
    {{/errors}}

    <thead>
        <td>Fist Name</td><td>LastName</td><td>Phone Number</td>
    </thead>
    <tbody>
        {{#monitors}}
        <tr>
            <td>{{firstName}}</td><td>{{lastName}}</td><td>{{phoneNumber}}</td>
        </tr>
        {{/monitors}}
    </tbody>

    <form action="/monitor", method="post">
        <div class="form-group">
            <label> First Name : </label>
            <input type="text" name="firstName" class="form-control"/>
        </div>
        <div class="form-group">
            <label> Last Name: </label>
            <input type="text" name="lastName" class="form-control"/>
        </div>
        <div class="form-group">
            <label> Phone Number: </label>
            <input type="text" name="phoneNumber" class="form-control"/>
        </div>
        <button type="Create" class="btn btn-default">Submit</button>
    </form>
    
</table>